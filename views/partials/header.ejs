<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>

    <% if (locals.loggedin == 1) { %>
        <div id="tools">
            <!-- Link to account management page -->
            <a title="Account Management" href="/account">Welcome <%- locals.accountData.account_firstname %></a>
            |
            <!-- Link to logout -->
            <a title="Log Out" href="/account/logout">Logout</a>
        </div>
    <% } else { %>
        <div id="tools">
            <!-- Only shown when not logged in -->
            <a title="Click to log in" href="/account/login">My Account</a>
        </div>
    <% } %>
</header>
<meta name="author" content="Benjamin Wasden">
<link rel="stylesheet" href="/css/styles.css">
<link rel="icon" href="/images/site/favicon.ico">
